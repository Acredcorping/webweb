<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bjut.mapper.CartMapper">
    <resultMap id="shopResult" type="Shop">
        <id property="id" column="shop_id"/>
        <result property="name" column="shop_name"/>
    </resultMap>

    <resultMap id="dishResult" type="Dish">
        <id property="id" column="dish_id"/>
        <result property="shopId" column="shop_id"/>
        <result property="title" column="title"/>
        <result property="description" column="description"/>
        <result property="image" column="image"/>
        <result property="price" column="price"/>
    </resultMap>

    <resultMap id="cartDishShopList" type="CartDishShop">
        <result property="userId" column="user_id"/>
        <association property="dish" javaType="Dish" resultMap="dishResult"/>
        <association property="shop" javaType="Shop" resultMap="shopResult"/>
    </resultMap>


    <select id="queryUserId" resultType="CartDishShop">
        SELECT cart.user_id,
               dish.id   as dish_id,
               shop.id   as shop_id,
               shop.name as shop_name,
               dish.title,
               dish.description,
               dish.image,
               dish.price
        FROM midnight_delights.tb_cart cart
                 LEFT JOIN midnight_delights.tb_menu dish ON cart.dish_id = dish.id
                 LEFT JOIN midnight_delights.tb_shop shop ON dish.shop_id = shop.id
        where user_id = #{userId}
    </select>
</mapper>